package gestorNotas;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
	        Scanner sc = new Scanner(System.in);
	        Examen examen = new Examen(2, 7); // Cantidad de alumnos y nota de aprobación
	        
	        // Cargar datos de alumnos
	        Alumno alumno1 = new Alumno("001", "Ana", 3);
	        alumno1.setMateria(0, "Matemáticas");
	        alumno1.setNota(0, 8);
	        alumno1.setMateria(1, "Historia");
	        alumno1.setNota(1, 5);
	        alumno1.setMateria(2, "Química");
	        alumno1.setNota(2, 9);

	        Alumno alumno2 = new Alumno("002", "Pedro", 3);
	        alumno2.setMateria(0, "Matemáticas");
	        alumno2.setNota(0, 6);
	        alumno2.setMateria(1, "Historia");
	        alumno2.setNota(1, 7);
	        alumno2.setMateria(2, "Química");
	        alumno2.setNota(2, 4);

	        examen.cargarAlumno(0, alumno1);
	        examen.cargarAlumno(1, alumno2);

	        int opcion;
	        do {
	            System.out.println("\nMenú:");
	            System.out.println("1. Mostrar estado de las materias de los alumnos");
	            System.out.println("2. Mostrar promedio de los alumnos");
	            System.out.println("3. Mostrar materias con notas superiores al promedio");
	            System.out.println("4. Salir");
	            System.out.print("Seleccione una opción: ");
	            opcion = sc.nextInt();

	            switch (opcion) {
	                case 1:
	                    examen.mostrarEstadoAlumnos();
	                    break;
	                case 2:
	                    examen.mostrarPromedioAlumnos();
	                    break;
	                case 3:
	                    examen.mostrarMateriasSuperioresAlPromedio();
	                    break;
	                case 4:
	                    System.out.println("Saliendo...");
	                    break;
	                default:
	                    System.out.println("Opción no válida.");
	            }
	        } while (opcion != 4);
	        
	        sc.close();
	}

}
