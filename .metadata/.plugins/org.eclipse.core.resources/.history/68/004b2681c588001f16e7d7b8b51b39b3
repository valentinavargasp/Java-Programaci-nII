package gestorNotas;
public class Alumno {
    private String nombre;
    private String[] materias;
    private int[] notas;

    // Constructor que recibe el nombre y la cantidad de materias
    public Alumno(String nombre, int cantMaterias) {
        this.nombre = nombre;
        this.materias = new String[cantMaterias];
        this.notas = new int[cantMaterias];
    }

    // MÃ©todos para establecer materias y notas
    public void setMateria(int index, String materia) {
        if (index >= 0 && index < materias.length) {
            materias[index] = materia;
        }
    }

    public void setNota(int index, int nota) {
        if (index >= 0 && index < notas.length) {
            notas[index] = nota;
        }
    }

    // MÃ©todos de acceso
    public String getNombre() {
        return nombre;
    }

    public String[] getMaterias() {
        return materias;
    }

    public int[] getNotas() {
        return notas;
    }
}
