package gestorNotas;

public Alumno(String legajo, String nombre, int cantMaterias) {
    this.legajo = legajo;
    this.nombre = nombre;
    this.materias = new String[cantMaterias];
    this.notas = new int[cantMaterias];
}

// MÃ©todos para obtener y asignar notas y materias
public String getLegajo() {
    return legajo;
}

public String getNombre() {
    return nombre;
}

public String[] getMaterias() {
    return materias;
}

public int[] getNotas() {
    return notas;
}

public void setMateria(int index, String materia) {
    materias[index] = materia;
}

public void setNota(int index, int nota) {
    notas[index] = nota;
}

}
